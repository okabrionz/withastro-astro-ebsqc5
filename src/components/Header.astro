---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<h2 class="text-xl font-bold bg-red-400 text-center">
	<a href="/" class="text-black dark:text-white">
		{SITE_TITLE}
		</a>
	</h2>
	<nav class="px-3 py-2 bg-gray-500 block md:flex">
		<HeaderLink class=" text-black dark:text-white hover:text-red-400" href="/">Home</HeaderLink>
		<HeaderLink class=" text-black dark:text-white hover:text-red-400" href="/blog">Blog</HeaderLink>
		<HeaderLink class=" text-black dark:text-white hover:text-red-400" href="/about">About</HeaderLink>
		<HeaderLink class=" text-black dark:text-white hover:text-red-400" href="https://twitter.com/astrodotbuild" target="_blank">Twitter</HeaderLink>
		<HeaderLink class=" text-black dark:text-white hover:text-red-400" href="https://github.com/withastro/astro" target="_blank">GitHub</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
